<h2>All users</h2>

<%= will_paginate %>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= link_to h(user.name), user %>
      <% if current_user.admin? %>
          <%= link_to "delete", user, :method => :delete, :confirm => "Are you sure?" %>
      <% end %>
    </li>
  <% end %>
</ul>

<%= will_paginate %>
